@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Sign In | Bug Tracker by John</title>
    <!-- Favicon-->
    <link rel="icon" href="~/images/Webp.net-resizeimage.jpg" type="image/x-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <!-- Waves Effect Css -->
    <link href="~/Content/waves.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="~/Content/animate.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="~/Content/style.css" rel="stylesheet" />

    <!--My Custom-->
    <link href="~/Content/Custom.css" rel="stylesheet" />

</head>

<body class="login-page">
    <div class="login-box">
        <div class="logo">
            <a href="javascript:void(0);">Bug<b>Tracker</b></a>
            <small>by John</small>
        </div>
        <div class="card">
            <div class="body">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @*<form id="sign_in" method="POST">*@
                    <div class="msg">Sign In to start your session</div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">person</i>
                        </span>
                        <div class="form-line">
                            <input type="email" class="form-control" name="email" placeholder="Email" required autofocus>
                        </div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">lock</i>
                        </span>
                        <div class="form-line">
                            <input type="password" class="form-control" name="password" placeholder="Password" required>
                        </div>
                    </div>
                    <div class="row">
                        @*<div class="col-xs-8 p-t-5">
                    <input type="checkbox" name="rememberme" id="rememberme" class="filled-in chk-col-pink">
                    <label for="rememberme">Remember Me</label>
                </div>*@
                        <div class="col-xs-6">
                            @*col-xs-4*@
                            <button class="btn btn-block bg-red waves-effect" type="submit">SIGN IN</button>
                        </div>
                    </div>
                    <div class="row m-t-15 m-b--20">
                        <div class="col-xs-6">
                            @*<a href="sign-up.html">Register Now!</a>*@
                            @Html.ActionLink("Register Now!", "LandingPage")
                        </div>
                        <div class="col-xs-6 align-right">

                            @Html.ActionLink("Forgot your password?", "ForgotPassword", "Account")
                        </div>
                        <div class="row text-center">
                            Want to take a test drive?  @Html.ActionLink("Login as Guest User!", "DemoLogin")
                        </div><br />

                    </div>
                    @*</form>*@

                }

            </div>
        </div>
    </div>

    <!-- Jquery Core Js -->
    <script src="~/Scripts/jquery.min.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="~/Scripts/bootstrap.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="~/Scripts/waves.js"></script>

    <!-- Validation Plugin Js -->
    <script src="~/Scripts/jquery.validate.js"></script>

    <!-- Custom Js -->
    <script src="~/Scripts/admin.js"></script>
    <script src="~/Scripts/sign-in.js"></script>
</body>

</html>

