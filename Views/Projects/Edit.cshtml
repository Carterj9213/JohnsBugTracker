                            @Html.LabelFor(model => model.Name, "Projectmanager", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("ProjectManager", null, htmlAttributes: new { @class = "form-control show-tick" })
                            </div>

                        </div>


                        <div class="row clearfix">


                        </div>

                        <div class="form-group">

                            <button type="submit" class="btn btn-primary m-t-15 waves-effect">Save</button>

                        </div>

                    }


                </div>
            </div>
        </div>
    </div>
    <!-- #END# Vertical Layout -->

</div>


