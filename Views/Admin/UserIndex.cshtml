@using JohnsBugTracker.Models
@using JohnsBugTracker.Helpers

@model IEnumerable<UserViewModel>

@{
    ViewBag.Title = "UserIndex";
}

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        EXPORTABLE TABLE
                    </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="@Url.Action("ManageRoles", "Admin")">Manage User Roles</a></li>
                                <li><a href="javascript:void(0);">Another action</a></li>
                                <li><a href="javascript:void(0);">Something else here</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>

                @{
                    var roleHelper = new JohnsBugTracker.Helpers.RoleHelper();
                    
                }
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                            <thead>
                                <tr>
                                    <th>FirstName</th>
                                    <th>LastName</th>
                                    <th>Display Name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Edit Role</th>

                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>FirstName</th>
                                    <th>LastName</th>
                                    <th>Display Name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Edit Role</th>

                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.FirstName</td>
                                        <td>@item.LastName</td>
                                        <td>@item.DisplayName</td>
                                        <td>@item.Email</td>
                                        <td>
                                            @foreach (var role in roleHelper.ListEmailRoles(item.Email))
                                            {
                                                @role

                                            }
                                        </td>

                                        <td>

                                            @Html.ActionLink("Manage Role", "ManageMyRole", new { email = item.Email })

                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>



